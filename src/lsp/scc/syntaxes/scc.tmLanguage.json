{
  "name": "scc",
  "scopeName": "source.scc",
  "fileTypes": [
    ".sc"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.scc",
      "match": "\\b(and|char|else|for|if|int|or|return|while)\\b"
    },
    {
      "name": "string.quoted.double.scc",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.scc",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.scc"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.scc"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.scc"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.scc"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.scc",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
